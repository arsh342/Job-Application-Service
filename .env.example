# Example environment variables for Job-Application-Service
# Copy this file to .env and fill in your real values

# ==============================
# Authentication Service (8083)
# ==============================
# Database
AUTH_DB_URL=your_auth_db_url
AUTH_DB_USERNAME=your_auth_db_username
AUTH_DB_PASSWORD=your_auth_db_password

# JWT (32+ bytes; rotate in production)
JWT_SECRET=your_jwt_secret
JWT_EXPIRATION=your_jwt_expiration

# OAuth2 - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OAuth2 - GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret


# ============================
# Application Service (8082)
# ============================
# Database
APP_DB_URL=your_app_db_url
APP_DB_USERNAME=your_app_db_username
APP_DB_PASSWORD=your_app_db_password

# JWT
APP_JWT_SECRET=your_app_jwt_secret
APP_JWT_EXPIRATION=your_app_jwt_expiration


# ======================
# Job Service (8081)
# ======================
# Database
JOB_DB_URL=your_job_db_url
JOB_DB_USERNAME=your_job_db_username
JOB_DB_PASSWORD=your_job_db_password

# JWT
JOB_JWT_SECRET=your_job_jwt_secret
JOB_JWT_EXPIRATION=your_job_jwt_expiration

# Gemini Api Key
GEMINI_API_KEY=your_api_key
